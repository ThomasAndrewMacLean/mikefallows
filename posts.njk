---
layout: layouts/home.njk
eleventyNavigation:
  key: Archive
  order: 2
pagination:
  data: collections.posts
  reverse: true
  size: 6
  alias: posts
permalink: "posts/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}"
---

{% set postslist = posts %}
{% include "postslist.njk" %}

<nav aria-labelledby="posts-pagination">
  <h2 id="posts-pagination" class="sr-only">Navigate posts</h2>
  <ol class="flex space-around gap-3">
    <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}" class="hover:underline">Previous</a>{% else %}<span class="opacity-50">Previous</span>{% endif %}</li>
{%- for pageEntry in pagination.pages %}
    <li><a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %} class="hover:underline">{{ loop.index }}</a></li>
{%- endfor %}
    <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}" class="hover:underline">Next</a>{% else %}<span class="opacity-50">Next</span>{% endif %}</li>
  </ol>
</nav>
