---
layout: layouts/base.njk
templateClass: tmpl-post
---
<div class="mx-auto max-w-3xl mb-4">
  <h1 class="text-4xl max-w-xl font-medium">{{ title }}</h1>
</div>

<div class="mx-auto max-w-3xl opacity-70">
  <time datetime="{{ page.date | htmlDateString }}" class="mr-4 font-medium">{{ page.date | readableDate }}</time>
  <div class="leading-tight font-medium">
    {% set tagslist = tags %}
    {% include "tagslist.njk" %}
  </div>
</div>

<div class="prose dark:prose-dark mx-auto max-w-3xl py-16 font-body">
  {{ content | safe }}
</div>

{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<hr>
<ul class="mt-4 font-medium max-w-sm">
  {%- if nextPost %}
    <li class="mb-2">
      <span class="block opacity-70">Newer</span>
      <a class="font-medium" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
    </li>
  {% endif %}
  {%- if previousPost %}
  <li>
    <span class="block opacity-70">Older</span>
    <a class="font-medium" href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
  </li>{% endif %}
</ul>
{%- endif %}
